{
  "manifest_version": 3,
  "name": "Chrome Tab Killer",
  "version": "1.0",
  "description": "Discards heavy tabs (like SharePoint) on command",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "src/js/background.js"
  },
  "action": {
    "default_popup": "src/html/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
